<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="cz.cvut.fit.pid_application.activity.fragment.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/map_fragment" >
        <action
            android:id="@+id/action_mapFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_mapFragment_to_tripInfoFragment"
            app:destination="@id/tripInfoFragment" />
        <action
            android:id="@+id/action_mapFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="cz.cvut.fit.pid_application.activity.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_search_to_map"
            app:destination="@id/mapFragment"
            app:popUpTo="@+id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="cz.cvut.fit.pid_application.activity.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/profile_fragment" >
        <action
            android:id="@+id/action_profile_to_map"
            app:destination="@id/mapFragment"
            app:popUpTo="@+id/mapFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripInfoFragment"
        android:name="cz.cvut.fit.pid_application.activity.fragment.TripInfoFragment"
        android:label="fragment_trip_info"
        tools:layout="@layout/trip_info_fragment" >
        <action
            android:id="@+id/action_gameWonFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@+id/titleFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_tripInfoFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>